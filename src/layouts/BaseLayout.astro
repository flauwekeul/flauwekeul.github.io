---
import '@fontsource/source-sans-3/variable-italic.css'
import '@fontsource/source-sans-3/variable.css'
import '@fontsource/source-serif-4/variable-italic.css'
import '@fontsource/source-serif-4/variable.css'

export interface Props {
  title?: string
}

const { title = 'AbbeKeultjes.nl' } = Astro.props.frontmatter ?? Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-zinc-900 text-white font-serif">
    <slot />
  </body>
</html>
